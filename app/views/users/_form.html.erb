<%= form_for(@user, :html => {class: "ui form", role: "form"}) do |f| %>

      <%= f.label :username %>

      <%= f.text_field :username, class: "ui fluid form", placeholder: "Enter username", autofocus: true %>
      <br><br>


      <%= f.label :email %>

      <%= f.email_field :email, class: "ui fluid form", placeholder: "Enter email" %>
      <br><br>


      <%= f.label :password %>

      <%= f.password_field :password, class: "ui fluid form", placeholder: "Enter password" %>
      <br><br><br>


      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'ui primary button') %>

<% end %>
