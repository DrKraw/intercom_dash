<br><br><br>
<h2 class="ui blue center aligned icon header">
  <i class="circular users icon"></i>
  Donals Intercom Dashboard
</h2>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html:{class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :email, "Email" %>
          <div class="ui left icon input">
            <%= f.text_field :email, class: "ui fluid form", placeholder: "Email" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, class: "ui fluid form", placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui blue submit inverted button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
          <%= link_to 'Signup', signup_path %>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
